<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>CreateCompany</servlet-name>
        <servlet-class>servlets.CreateCompany</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CreateCompany</servlet-name>
        <url-pattern>/createcompany/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreateToken</servlet-name>
        <servlet-class>servlets.CreateToken</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CreateToken</servlet-name>
        <url-pattern>/createtoken/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreateEmployee</servlet-name>
        <servlet-class>servlets.CreateEmployee</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CreateEmployee</servlet-name>
        <url-pattern>/createemployee/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreateCompanyToken</servlet-name>
        <servlet-class>servlets.CreateCompanyToken</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CreateCompanyToken</servlet-name>
        <url-pattern>/createcompanytoken/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CompanyGetPassword</servlet-name>
        <servlet-class>servlets.CompanyGetPassword</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CompanyGetPassword</servlet-name>
        <url-pattern>/companygetpassword/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EmployeeGetPassword</servlet-name>
        <servlet-class>servlets.EmployeeGetPassword</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>EmployeeGetPassword</servlet-name>
        <url-pattern>/employeegetpassword/*</url-pattern>
    </servlet-mapping>

</web-app>